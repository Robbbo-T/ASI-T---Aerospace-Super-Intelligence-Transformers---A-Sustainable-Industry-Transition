{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://asi-t.dev/schemas/mal-manifest.json",
  "title": "MAL Manifest Schema",
  "description": "Schema for Main Application Layer (MAL) manifest files",
  "type": "object",
  "required": ["mal"],
  "properties": {
    "mal": {
      "type": "object",
      "required": ["utcs_mi", "llc", "description", "cycle", "modes", "rbac"],
      "properties": {
        "utcs_mi": {
          "type": "string",
          "description": "UTCS Mission Interface identifier"
        },
        "llc": {
          "type": "string",
          "description": "LLC layer identifier"
        },
        "description": {
          "type": "string",
          "description": "MAL description"
        },
        "cycle": {
          "type": "object",
          "required": ["period_ms", "deadline_ms"],
          "properties": {
            "period_ms": {
              "type": "number",
              "minimum": 0
            },
            "deadline_ms": {
              "type": "number",
              "minimum": 0
            },
            "jitter_max_ms": {
              "type": "number",
              "minimum": 0
            },
            "heartbeat_cycles": {
              "type": "integer",
              "minimum": 1
            },
            "watchdog_cycles": {
              "type": "integer",
              "minimum": 1
            }
          }
        },
        "modes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "minItems": 1
        },
        "rbac": {
          "type": "object",
          "required": ["classes"],
          "properties": {
            "classes": {
              "type": "array",
              "items": {
                "type": "object",
                "required": ["name", "description", "permits"],
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "description": {
                    "type": "string"
                  },
                  "permits": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        },
        "fences": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["name"],
            "properties": {
              "name": {
                "type": "string"
              },
              "guard": {
                "type": "string"
              },
              "tests": {
                "type": "array",
                "items": {
                  "type": "object"
                }
              }
            }
          }
        },
        "material_passport_refs": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["mp_id"],
            "properties": {
              "mp_id": {
                "type": "string"
              }
            }
          }
        }
      }
    }
  }
}
