{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "ICN (Interface Control Network) Schema",
  "description": "Schema for Interface Control Network specifications in gICD triad",
  "type": "object",
  "required": ["icn_version", "interfaces"],
  "properties": {
    "icn_version": {
      "type": "string",
      "pattern": "^v[0-9]+\\.[0-9]+$"
    },
    "interfaces": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "name", "type"],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^ICN-[A-Z0-9-]+$"
          },
          "name": {
            "type": "string"
          },
          "type": {
            "type": "string",
            "enum": ["hardware", "software", "data", "power", "control"]
          },
          "description": {
            "type": "string"
          }
        }
      }
    }
  },
  "additionalProperties": false
}