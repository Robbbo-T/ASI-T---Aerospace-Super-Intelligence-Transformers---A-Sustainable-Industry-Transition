{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://gaia-qao.org/schemas/qb_orchestration.schema.json",
  "title": "QB Orchestration Policy",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "problem_class": { "type": "string", "enum": ["ModesSelect", "RouteOptim", "ResourceAlloc"] },
    "solvers": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "kind": { "type": "string", "enum": ["QAOA", "VQE", "Annealing", "Classical"] },
          "budget_ms": { "type": "number", "minimum": 1 },
          "params": { "type": "object" }
        },
        "required": ["name", "kind", "budget_ms"]
      },
      "minItems": 1
    },
    "acceptance_policy": {
      "type": "object",
      "properties": {
        "max_gap_pct": { "type": "number", "minimum": 0 },
        "must_satisfy": { "type": "array", "items": { "type": "string" } }
      },
      "required": ["max_gap_pct"]
    },
    "fallback": { "type": "string" }
  },
  "required": ["problem_class", "solvers", "acceptance_policy", "fallback"]
}