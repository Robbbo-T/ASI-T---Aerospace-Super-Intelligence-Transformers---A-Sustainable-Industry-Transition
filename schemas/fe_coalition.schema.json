{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://gaia-qao.org/schemas/fe_coalition.schema.json",
  "title": "FE Coalition Management",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "federation_id": { "type": "string", "pattern": "^FE-[A-Z0-9_-]+$" },
    "membership": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "aircraft_id": { "type": "string" },
          "role": { "type": "string", "enum": ["Leader", "Follower", "Observer"] },
          "trust": { "type": "number", "minimum": 0, "maximum": 1 },
          "decay_per_min": { "type": "number", "minimum": 0 }
        },
        "required": ["aircraft_id", "role", "trust"]
      }
    },
    "events": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "ts": { "type": "string", "format": "date-time" },
          "type": { "type": "string", "enum": ["Join", "Leave", "TrustUpdate"] },
          "reason": { "type": "string" }
        },
        "required": ["ts", "type"]
      }
    },
    "rekey_policy": {
      "type": "object",
      "properties": {
        "interval_min": { "type": "number", "minimum": 1 },
        "on_event": { "type": "boolean" }
      },
      "required": ["interval_min", "on_event"]
    }
  },
  "required": ["federation_id", "membership", "events", "rekey_policy"]
}