{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://gaia-qao.org/schemas/det_anchor.schema.json",
  "title": "DET/QS Anchor",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "utcs_code": { "type": "string", "pattern": "^UTCS-MI-[A-Z]{3}-[A-Z0-9_.-]+$" },
    "timestamp_utc": { "type": "string", "format": "date-time" },
    "event": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "mode": { "type": "string" },
        "reasons": { "type": "array", "items": { "type": "string" } },
        "limits": { "type": "object", "additionalProperties": { "type": ["number","string","boolean"] } }
      },
      "required": ["mode"]
    },
    "trace_refs": {
      "type": "array",
      "items": { "type": "string", "format": "uri-reference" },
      "minItems": 1
    },
    "content_hash_sha256": { "type": "string", "pattern": "^[a-f0-9]{64}$" },
    "signature": { "type": "string", "pattern": "^(DET:(ed25519|ecdsa):)[A-Za-z0-9+/=.-]+$" }
  },
  "required": ["utcs_code","timestamp_utc","event","trace_refs","content_hash_sha256","signature"]
}