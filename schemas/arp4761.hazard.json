{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://gaia-qao.org/schemas/arp4761.hazard.json",
  "title": "ARP4761 Hazard Register",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "hazards": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "id": { "type": "string", "pattern": "^HZ-[0-9]{3}$" },
          "title": { "type": "string" },
          "severity": { "type": "string", "enum": ["Catastrophic","Hazardous","Major","Minor","No Safety Effect"] },
          "initial_likelihood": { "type": "string" },
          "controls": { "type": "array", "items": { "type": "string" } },
          "residual_risk": { "type": "string" },
          "verification": { "type": "string" },
          "links": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "tests": { "type": "array", "items": { "type": "string" } },
              "requirements": { "type": "array", "items": { "type": "string" } }
            }
          }
        },
        "required": ["id","title","severity","initial_likelihood","controls","residual_risk","verification"]
      }
    }
  },
  "required": ["hazards"]
}